<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="il.co.jws" version="2.0">
    <name>ירושמיים</name>
    <description>
        Jerusalem Weather Station.
    </description>
    <author email="boazn1@gmail.com" href="02ws.co.il">
        Boaz Nechemia
    </author>
    <content src="index.html"/>
    <preference name="permissions" value="none"/>
    <preference name="phonegap-version" value="cli-7.0.1"/>
    <preference name="orientation" value="default"/>
    <preference name="target-device" value="universal"/>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="prerendered-icon" value="true"/>
    <preference name="detect-data-types" value="true"/>
    <preference name="exit-on-suspend" value="true"/>
    <preference name="show-splash-screen-spinner" value="true"/>
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="SplashScreenSpinnerColor" value="black" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="auto-hide-splash-screen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="1000"/>
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="CameraUsesGeolocation" value="false" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="deployment-target" value="9.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <plugin name="cordova-plugin-console" source="npm" />
    <plugin name="cordova-plugin-device" source="npm" />
    <plugin name="cordova-plugin-file" source="npm" />
    <plugin name="cordova-plugin-file-transfer" source="npm" />
    <plugin name="cordova-plugin-purchase" source="npm" version="9.0.0"/>
    <plugin name="cordova-plugin-hijack-webview-link-click" source="npm" />
    <plugin name="phonegap-plugin-push" spec="1.8.0">
        <param name="SENDER_ID" value="12345678" />
     </plugin>
    <plugin name="cordova-plugin-statusbar" source="npm" />
    <plugin name="cordova-plugin-inappbrowser" source="npm"/>
    <plugin name="cordova-plugin-camera-with-exif" source="npm"/>
    <plugin name="cordova-plugin-x-socialsharing" source="npm" />
    <plugin name="cordova-plugin-dialogs" source="npm" />
    <plugin name="cordova-plugin-whitelist" source="npm" />
    <access origin="*" />
    <allow-navigation href="*" />
    <feature name="SocialSharing">
        <param name="ios-package" value="SocialSharing" />
    </feature>
    <feature name="StatusBar">
            <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>   
    <icon gap:platform="ios" src="res/icon/ios/icon-57.png" width="57" height="57" />
    <icon gap:platform="ios" src="res/icon/ios/icon-29.png" width="29" height="29" />
    <icon gap:platform="ios" src="res/icon/ios/icon-58.png" width="58" height="58" />
    <icon gap:platform="ios" src="res/icon/ios/icon-72.png" height="72" width="72"/>
    <icon gap:platform="ios" src="res/icon/ios/Icon-76.png" height="76" width="76"/>
    <icon gap:platform="ios" src="res/icon/ios/icon-87.png" width="87" height="87" />
    <icon gap:platform="ios" src="res/icon/ios/icon-114.png" width="114" height="114"/>
    <icon gap:platform="ios" src="res/icon/ios/Icon-120.png" width="120" height="120"/>
    <icon gap:platform="ios" src="res/icon/ios/Icon-144.png" width="144" height="144" />
    <icon gap:platform="ios" src="res/icon/ios/icon-152.png" width="152" height="152" />
    <!-- Spotlight Icon -->
    <icon gap:platform="ios" src="res/icon/ios/icon-40.png" width="40" height="40"/>
    <icon gap:platform="ios" src="res/icon/ios/icon-40@2x.png" width="80" height="80"/>
    
  
    <gap:splash src="Default.png"         gap:platform="ios"     width="320" height="480" />
    <gap:splash src="Default@2x.png"      gap:platform="ios"     width="640" height="960" />
    <gap:splash src="Default-568h@2x.png" gap:platform="ios"     width="640" height="1136" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait.png"          gap:platform="ios"     width="320" height="480" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-2x.png"       gap:platform="ios"     width="640" height="960" />
    <gap:splash src="res/screen/ios/screen-iphone-landscape.png"         gap:platform="ios"     width="480" height="320" />
    <gap:splash src="res/screen/ios/screen-iphone-landscape-2x.png"      gap:platform="ios"     width="960" height="640" />
    <gap:splash src="res/screen/ios/screen-ipad-portrait.png"            gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="res/screen/ios/screen-ipad-portrait-2x.png"         gap:platform="ios"     width="1536" height="2008" />
    <gap:splash src="res/screen/ios/screen-ipad-landscape.png"           gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="res/screen/ios/screen-ipad-landscape-2x.png"        gap:platform="ios"     width="2048" height="1496" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png"  gap:platform="ios"     width="640"  height="1136" />
    <!-- iPhone 6 -->
    <gap:splash src="res/screen/ios/Default-667h@2x.png" width="750" height="1334" gap:platform="ios"/>
    <gap:splash src="res/screen/ios/Default-Portrait-736h@3x.png" width="1242" height="2208" gap:platform="ios"/>
    <gap:splash src="res/screen/ios/Default-Landscape-736h@3x.png" width="2208" height="1242" gap:platform="ios"/>
    <!-- 1334x1334 -->
    <splash src="res/screen/ios/Default@2x~iphone~anyany.png" platform="ios" />
    <!-- 750x1334 -->
    <splash src="res/screen/ios/Default@2x~iphone~comany.png" gap:platform="ios" />
    <!-- 2208x2208 -->
    <splash src="res/screen/ios/Default@2x~iphone~comcom.png" platform="ios" />
    <!-- 1242x2208 -->
    <splash src="res/screen/ios/Default@3x~iphone~anyany.png" platform="ios" />
    <!-- 1278x2732 -->
    <splash src="res/screen/ios/Default@3x~iphone~anycom.png" platform="ios" />
    
    <!-- 2732x2732 -->
    <splash src="splash.png" platform="ios" />
    <gap:splash src="res/screen/ios/Default@2x~universal~anyany.png" platform="ios" />
</widget>
